[Unit]
Description=auditbeat
Documentation=https://www.elastic.co/guide/en/auditbeat/auditbeat/current/index.html
Wants=network-online.target
After=network-online.target

[Service]
ExecStart={{ home_dir }}/auditbeat/auditbeat -e -c {{ config_dir }}/auditbeat/auditbeat.yml -path.home {{ home_dir }}/auditbeat -path.config {{ config_dir }}/auditbeat -path.data {{ data_dir }}/auditbeat -path.logs {{ log_dir }}/auditbeat
Restart=always

[Install]
WantedBy=multi-user.target
